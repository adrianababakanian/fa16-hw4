<div>

  <h2>Cats</h2>
  <table>
    <tr>
      <th> ID </th>
      <th> Name </th>
    </tr>
    <%= @cats.each do |cat|%>
    <tr>
      <td><%=cat.id%></td>
      <td><%=cat.name%></td>
    </tr>
    <% end %>
  </table>


  <h2>Users</h2>
  <table>
    <tr>
      <th> ID </th>
      <th> Username </th>
      <th> Email </th>
      <th> Age </th>
    </tr>
    <%= @users.each do |user|%>
    <tr>
      <td><%=user.id%></td>
      <td><%=user.username%></td>
      <td><%=user.email%></td>
      <td><%=user.age%></td>
    </tr>
    <% end %>
  </table>


  <h2>Todos</h2>
  <table>
    <tr>
      <th> ID </th>
      <th> Task </th>
      <th> Finished? </th>
    </tr>
    <%= @todos.each do |todo|%>
    <tr>
      <td><%=todo.id%></td>
      <td><%=todo.task%></td>
      <td><%=todo.finished%></td>
    </tr>
    <% end %>
  </table>

</div>
